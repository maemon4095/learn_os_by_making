{
	"name": "${localWorkspaceFolderBasename}",
	"build": {
		"dockerfile": "./Dockerfile",
		"args": {
			"WORKSPACE": "/${localWorkspaceFolderBasename}"
		}
	},
	"runArgs": [
		"--tty",
		"--name",
		"${localWorkspaceFolderBasename}"
	],
	"containerUser": "dev",
	"mounts": [
		{
			"type": "volume",
			"source": "${localWorkspaceFolderBasename}_cache",
			"target": "/${localWorkspaceFolderBasename}/.cache"
		}
	],
	"workspaceMount": "source=${localWorkspaceFolder},target=/${localWorkspaceFolderBasename},type=bind,consistency=cached",
	"workspaceFolder": "/${localWorkspaceFolderBasename}",
	"forwardPorts": [
		8080
	],
	"customizations": {
		"vscode": {
			"extensions": [
				"rust-lang.rust-analyzer",
				"vadimcn.vscode-lldb",
				"tamasfe.even-better-toml",
				"ms-vscode.hexeditor"
			],
			"settings": {
				"editor.tabSize": 4,
				"terminal.integrated.defaultProfile.linux": "bash"
			}
		}
	}
}